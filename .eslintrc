{
  "extends": "next/core-web-vitals",
  "settings": {
    // https://stackoverflow.com/a/58323590/3087033
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ],
        "moduleDirectory": [
          "node_modules",
          "src/"
        ]
      }
    }
  },
  "rules": {
    "no-undef": "error",
    "no-unused-vars": "warn",
    "no-duplicate-imports": "warn",
    "import/no-unresolved": "error"
  }
}